<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3e3e3"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_marginTop="10dip"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/progress_background"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="#f4f4f4" />

        <TextView
            android:id="@+id/progress_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/similiar_pictures"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/color_bg"
        android:clickable="true"
        android:paddingEnd="10dip"
        android:paddingStart="10dip" >

        <ImageView
            android:id="@+id/similiar_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ico_photo_duplicate" />

        <TextView
            android:id="@+id/similiar_des"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/similiar_icon"
            android:gravity="center_vertical"
            android:text="@string/similiar_pictures"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/similiar_detail_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow" />
        
        <TextView
            android:id="@+id/similiar_size"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/similiar_detail_icon"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/blur_pictures"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/color_bg"
        android:clickable="true"
        android:paddingEnd="10dip"
        android:paddingStart="10dip" >

        <ImageView
            android:id="@+id/blur_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ico_photo_blurry" />

        <TextView
            android:id="@+id/blur_des"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/blur_icon"
            android:gravity="center_vertical"
            android:text="@string/blur_pictures"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/blur_detail_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/blur_size"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/blur_detail_icon"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>
    
        <RelativeLayout
        android:id="@+id/compress_pictures"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/color_bg"
        android:clickable="true"
        android:paddingEnd="10dip"
        android:paddingStart="10dip" >

        <ImageView
            android:id="@+id/compress_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ico_photo_shrinker" />

        <TextView
            android:id="@+id/compress_des"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/compress_icon"
            android:gravity="center_vertical"
            android:text="@string/compress_pictures"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/compress_detail_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/compress_size"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/compress_detail_icon"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>